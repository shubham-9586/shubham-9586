using namespace std;
bool is_palindrome( string &s)
{
	ll n,i;
	n=s.length();
	for(i=0;i<n/2;i++)
	{
		if(s[i]!=s[n-i-1])
		return false;
	}
	return true;
}
int main()
{
//test
{
string s;
cin>>s;
if(is_palindrome(s))
cout<<"YES";
else
cout<<"NO";
cout<<'\n';
}
    return 0;
}
